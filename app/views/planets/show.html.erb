
<div class="container">
  <div class="d-flex align-items-center">
    <h1><%= @planet.name %></h1>
    <%=link_to("[Edit this planet]", edit_planet_path)%>
  </div>
  <div class="card-planet d-flex justify-content-center">
    <div class="planet-img">
      <%= cl_image_tag @planet.photo.key, height: 300, width: 300, crop: :fill %>
    </div>
    <div class="description">
      <p><strong>Description : </strong><%= @planet.description %></p>
      <p><strong>Price per millenia: </strong><%= @planet.price_per_millenia %><%= image_tag "ico.png" %></p>
      <p><strong>Capacity : </strong><%= @planet.capacity %></p>
      <p><strong>Rating : </strong><%= @planet.rating %></p>
    </div>
  </div>
  <div>
    <br>
    <h1>New booking</h1>
    <%= simple_form_for [@planet, @booking] do |f| %>
      <%= f.input :arrival_date, label:"Arrival date in millenia", placeholder:"3" %>
      <%= f.input :departure_date, label:"Departure date in millenia", placeholder:"4" %>
      <%= f.submit "Book this planet", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
