<div class="background-img">
  <div class="container">
    <h2>All planets</h2>
    <div class="row" >
      <% @planets.each do |planet|%>
        <div class="col-3 d-flex justify-content-center">
          <div class="card-trip">
            <%= link_to planet_path(planet), class:"text-decoration-none text-white" do %>
              <%= cl_image_tag planet.photo.key, height: 300, width: 300, crop: :fill %>
              <div class="card-trip-infos">
                <div>
                  <h2><%= planet.name %></h2>
                </div>
                <div class="info-index">
                  <p><%= planet.capacity %> billion people</p>
                  <div class="d-flex align-items-center">
                    <p><%= planet.price_per_millenia %>&nbsp;<p>
                    <%= image_tag "ico.png" %>
                    <p>/millennium</p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <%end%>
    </div>
  </div>
</div>
