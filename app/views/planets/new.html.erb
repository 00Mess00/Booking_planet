<div class="background-img">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="rounded p-3 shadow">
          <h3>Create a new planet</h3>
          <%= simple_form_for @planet do |f| %>
            <%= f.input :name %>
            <%= f.input :localisation %>
            <%= f.input :capacity %>
            <%= f.input :description %>
            <%= f.input :price_per_millenia %>
            <%= f.input :photo, as: :file %>

            <%= f.submit class: 'btn btn-flat' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
