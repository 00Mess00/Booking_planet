<h1>NEW PAGE</h1>

<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new planet</h3>
        <%= simple_form_for @planet do |f| %>
          <%= f.input :name %>
          <%= f.input :localisation %>
          <%= f.input :capacity %>
          <%= f.input :description %>
          <%= f.input :price_per_millenia %>
          <%= f.input :rating %>

          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
