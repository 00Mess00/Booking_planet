<div class="background-img">
  <div class="container">
    <h2>My bookings</h2>
    <div class="row">
      <% @bookings.each do |booking|%>
        <div class="justify-content-center p-3">
          <div class="card-product">
            <%= cl_image_tag booking.planet.photo.key%>
            <div class="card-product-infos d-flex align-items-center justify-content-between">
              <div>
                <h2><%= booking.planet.name %></h2>
                <p>Arrival date: <%= booking.arrival_date %></p>
                <p>Departure date: <%= booking.departure_date %></p>
                <p>Total price: <%= booking.total_price %><%= image_tag "ico.png" %>
              </div>
              <div>
                <% if booking.status=="declined" %>
                  <div class="booking_tag_decline">
                  <i class="fa-solid fa-circle-xmark"></i>
                  </div>
                <% elsif booking.status=="pending" %>
                  <div class="booking_tag_pending">
                  <i class="fa-solid fa-clock"></i>
                  </div>
                <% elsif booking.status=="accepted" %>
                  <div class="booking_tag_accept">
                  <i class="fa-solid fa-circle-check"></i>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <%end%>
    </div>
  </div>
</div>
