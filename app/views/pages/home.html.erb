<div class="landing-picture">
  <div class="landing-bookingplanet container">
    <h1 class="landing-title booking">Book...</h1>
    <h1 class="landing-title aplanet">...a planet</h1>
    <div class="button-search">
      <%= link_to "Explore the univers !",  planets_path , class: "btn btn-primary btn-home mx-auto rounded" %>
      <%= image_tag "arrow.png", height: '24', width: '80' %>
    </div>
  </div>
  <div class="container">
    <h2 class="trending-title">Latest planets :</h2>
      <div class="row">
        <% @planets.each do |planet|%>
        <div class="col-3 d-flex justify-content-center">
          <div class="card-trip">
            <%= link_to planet_path(planet), class:"text-decoration-none text-white" do %>
              <%= cl_image_tag planet.photo.key, height: 300, width: 300, crop: :fill %>
              <div class="card-trip-infos">
                <div>
                  <h2><%= planet.name %></h2>
                </div>
                <div class="info-index">
                  <p><%= planet.capacity %> billion people</p>
                  <div class="d-flex align-items-center">
                    <p><%= planet.price_per_millenia %>&nbsp;<p>
                    <%= image_tag "ico.png" %>
                    <p>/millennium</p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <%end%>
      </div>
  </div>
