<div class="container">
  <h2>All my planets</h2>
  <%#= simple_form_for @planet, url: planets_path do |f| %>
    <%#= f.error_notification %>
    <%#= f.input :name %>
    <%#= f.button :submit, class: "btn-primary" %>
  <%# end %>
  <div class="row" >
    <% @planets.each do |planet|%>
      <div class="col-3 d-flex justify-content-center">
        <div class="card-trip">
        <%= link_to planet_path(planet) do %>
          <%= cl_image_tag planet.photo.key, height: 300, width: 400, crop: :fill %>
         <% end %>
          <div class="card-trip-infos">
            <div>
              <h2><%= planet.name %></h2>
            </div>
            <h2 class="card-trip-pricing"><%= planet.price_per_millenia %><%= image_tag "ico.png" %></h2>
          </div>
        </div>
      </div>
    <%end%>
  </div>
</div>
<i class="fa-regular fa-planet-ringed"></i>
